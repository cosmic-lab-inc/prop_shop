{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src",
    "test"
  ]
}