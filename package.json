{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "yes | lerna clean && rm -rf .nx && yarn",
    "test": "jest",
    "lint": "prettier --write \"./**/*.{ts,tsx}\" --loglevel silent",
    "build": "lerna run build",
    "build:sdk": "lerna run build --scope @cosmic-lab/prop-shop-sdk",
    "build:app": "lerna run build --scope prop-shop-app",
    "dev:app": "lerna run start --scope prop-shop-app  --stream",
    "start:app": "lerna run start --scope prop-shop-app  --stream"
  }
}